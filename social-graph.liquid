// This file is for looks only. It is what I build the liquid queries on and then make them one liners to bring into the html.

// og:url
{% if page.ogurl %}
  {{ page.ogurl }}
{% else %}
  {{ page.url | replace:'index.html','' | prepend: site.baseurl | prepend: site.url }}
{% endif %}

// og:type
{% if page.layout == 'post' %}
  post
{% else %}
  website
{% endif %}

// og:title
{% if page.ogtitle %}
  {{ page.ogtitle }}
{% elif page.title %}
  {{ page.title }}
{% else %}
  {{ site.title }}
{% endif %}

// og:description
{% if page.ogdescription %}
  {{ page.ogdescription | truncate: 160 }}
{% elif page.description %}
  {{ page.description | truncate: 160 }}
{% elif page.excerpt %}
  {{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}
{% else %}
  {{ site.description | strip_html | strip_newlines | truncate: 160 }}
{% endif %}

// og:img
{% if page.ogimg %}
  <meta property="og:image"              content="{{page.ogimg}}" />
{% elif site.ogimg %}
  <meta property="og:image"              content="{{site.ogimg}}" />
{% endif %}


// Title
{% if page.title %}
  {{ site.title }} | {{ page.title }}
{% else %}
  {{ site.title }}
{% endif %}

// Description
{% if page.seodescription %}
  {{ page.seodescription | truncate: 160 }}
{% elif page.ogdescription %}
  {{ page.ogdescription | truncate: 160 }}
{% elif page.description %}
  {{ page.description | truncate: 160 }}
{% elif page.excerpt %}
  {{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}
{% else %}
  {{ site.description | strip_html | strip_newlines | truncate: 160 }}
{% endif %}

// Keywords *Pick only one keyword or keyword pair for your seo*
{% if page.seokeyword %}
  <meta name="keywords" content="{{ page.seokeyword }}">
{% elif site.seokeyworddefault %}
  <meta name="keywords" content="{{ site.seokeyworddefault }}">
{% endif %}


